<table class="table table-striped">	
	<thead>
		<tr>
		
			<th>Имя</th>
			<th>Телефон</th>
			<th>Дата записи</th>
			<th>Барбер</th>
			<th>Цвет</th>
	</tr>
</thead>

<body>
	<% @results.each do |row| %>
		<tr>
		
			<td><%= row['username'] %></td>
			<td><%= row['phone'] %></td>
			<td><%= row['datetime'] %></td>
			<td><%= row['barber'] %></td>
			<td style="background-color: <%= row['color'] %>"><%= row['color'] %></td>
		</tr>
	<% end %>
</body>

</table>